@gameId = game-123
@dwellingId = dwelling-456
@creatureId = archer
@armyId = army-789

### Build Dwelling

# @name buildDwelling
PUT http://localhost:3000/games/{{gameId}}/dwellings/{{dwellingId}} HTTP/1.1
content-type: application/json

{
  "creatureId": "{{creatureId}}",
  "costPerTroop": {
    "gold": 150,
    "wood": 0,
    "ore": 0,
    "mercury": 0,
    "sulfur": 0,
    "crystal": 0,
    "gems": 0
  }
}

### Increase Available Creatures

# @name increaseCreatures
PUT http://localhost:3000/games/{{gameId}}/dwellings/{{dwellingId}}/available-creatures-increases HTTP/1.1
content-type: application/json

{
  "creatureId": "{{creatureId}}",
  "increaseBy": 10
}

### Recruit Creature

# @name recruitCreature
PUT http://localhost:3000/games/{{gameId}}/dwellings/{{dwellingId}}/creature-recruitments HTTP/1.1
content-type: application/json

{
  "creatureId": "{{creatureId}}",
  "armyId": "{{armyId}}",
  "quantity": 5,
  "expectedCost": {
    "gold": 750,
    "wood": 0,
    "ore": 0,
    "mercury": 0,
    "sulfur": 0,
    "crystal": 0,
    "gems": 0
  }
}

